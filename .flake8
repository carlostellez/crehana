[flake8]
max-line-length = 88
extend-ignore = 
    E203,
    E501,
    W503,
    F401
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
max-complexity = 10
import-order-style = google
application-import-names = app,tests 